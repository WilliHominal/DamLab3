<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.warh.damlab3">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DamLab3">
        <activity
            android:name=".ConfiguracionActivity"
            android:exported="true"
            android:parentActivityName=".MostrarRecordatoriosActivity">
        </activity>
        <activity
            android:name=".MostrarRecordatoriosActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AgregarRecordatorioActivity"
            android:exported="true"
            android:parentActivityName=".MostrarRecordatoriosActivity" />

        <receiver
            android:name=".receiver.RecordatorioReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="RECORDATORIO" />
            </intent-filter>
        </receiver>
    </application>

</manifest>