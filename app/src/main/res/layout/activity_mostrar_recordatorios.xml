<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MR_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarRecordatoriosActivity"
    android:background="@color/AR_background_primary_color">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/AR_background_primary_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar"></include>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/MR_recordatoriosRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/MR_recycler_view_margintop">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/MR_agregar_recordatorio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="@dimen/MR_floating_button_margin"
            android:contentDescription="@string/MR_boton_agregar_recordatorio"
            android:src="@drawable/icon_agregar"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/MR_navigation_view"
        android:background="@color/AR_background_primary_color"
        android:layout_height="match_parent"
        android:layout_width="325dp"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:itemTextColor="@color/primary_dark_color"
        app:itemIconTint="@color/primary_dark_color"
        app:menu="@menu/menu_drawer"
        />

</android.support.v4.widget.DrawerLayout>