<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MostrarRecordatoriosActivity"
    android:background="@color/AR_background_primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>

        <!--CAMBIAR POR CARDVIEW CON LA LISTA DE RECORDATORIOS-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECORDATORIO DD/MM/AAAA hh:mm"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n del recordatorio"
            android:textSize="15dp"
            android:layout_marginHorizontal="5dp"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/MR_agregar_recordatorio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="@dimen/MR_floating_button_margin"
        android:contentDescription="@string/MR_boton_agregar_recordatorio"
        android:src="@drawable/icon_agregar"/>

</android.support.design.widget.CoordinatorLayout>